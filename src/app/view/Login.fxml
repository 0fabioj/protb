<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="4.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.Login">
   <children>
      <Label text="ID" />
      <TextField fx:id="userIdField" />
      <Label text="Password" />
      <PasswordField fx:id="userPasswordField" />
      <Label fx:id="errorLabel" />
      <HBox spacing="8.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#action_cancelButton" prefWidth="96.0" text="Cancel" />
            <Button fx:id="okButton" mnemonicParsing="false" onAction="#action_okButton" prefWidth="96.0" text="OK" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
